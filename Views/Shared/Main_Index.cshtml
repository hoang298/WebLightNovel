@model List<WebLightNovel.Models.ModelStory.StoryIndexViewModel>
@{
    var list_views = ViewBag.ListTopView as List<WebLightNovel.Models.ModelStory.StoryIndexViewModel>;
}
<head>
    <style>
        .see-more-icon {
            width: 100%;
            height: 30%;
            position: absolute;
            top: 35%;
            display:flex;
            flex-direction:column;
            align-items:center;
        }
            .see-more-icon > i {
                font-size: 3.5rem;
               color:white;
            }

            .see-more-icon > div {
                font-size: 2.5rem;
                color: white;
            }
    </style>
</head>
<div class="container">
    <div class="banner">
        <div class="banner__title">
            <h2>Truyện đề cử</h2>
        </div>
        <div class="banner__wrapper">
            <div id="banner__list" class="banner__list">
                @foreach (var item in list_views)
                {
                    <div class="banner__item">
                        <a href="/truyen/@item.link_story">
                            <img src="~/Content/imageIllustration/@item.cover_image" alt="">
                        </a>
                        <div class="banner__item-caption">
                            <h3 class="banner__item-title">
                                <a href="/truyen/@item.link_story"> @item.title</a>
                            </h3>

                            <div class="banner__item-history">
                                <a class="overflowContent" href="/truyen/@item.link_chapter">@item.chapter_name</a>
                                <span>
                                    <i class="fas fa-history"></i>
                                    @item.newtimeUpdate
                                </span>
                            </div>
                        </div>
                    </div>
                }


            </div>
            <button id="btn_next" class="banner__btn">
                <img src="~/imageIcon/prev.png" alt="">
            </button>
            <button id="btn_prev" class="banner__btn">
                <img src="~/imageIcon/prev.png" alt="">
            </button>
        </div>
    </div>
    <div class="content">
        <div class="content__update">
            <div class="content__update-wrapper padding-all-10">
                <div class="content__title">
                    <h2>
                        Truyện mới cập nhật

                    </h2>
                </div>
                <div class="list__manga-wrapper">
                    @foreach (var item in Model)
                    {
                        <div class="manga__item">
                            <div class="manga__item-img">
                                <a href="/truyen/@item.link_story">
                                    <img src="~/Content/imageIllustration/@item.cover_image" alt="">
                                </a>
                               
                            </div>
                            <div class="manga__item-caption">
                                <h3 class="manga__item-title">
                                    <a href="/truyen/@item.link_story"> @item.title</a>
                                </h3>
                                <ul class="manga__item-history">
                                    <li class="item__history-chapter ">
                                        <a class="overflowContent" href="/truyen/@item.link_chapter">@item.chapter_name</a>
                                        <span>
                                            @item.newtimeUpdate
                                        </span>
                                    </li>

                                </ul>
                            </div>
                        </div>

                    }

                    <div class="manga__item">
                        <div class="manga__item-img">
                            <a href="/Story/ListStory?sort=update&page=1">
                                <img src="~/avatar/90071nocover.jpg" alt="">
                                <div class="see-more-icon">
                                    <i style="" class="fas fa-arrow-circle-right"></i>
                                    <div style="">Xem thêm</div>
                                </div>
                            </a>

                        </div>

                    </div>

                </div>
            </div>
            <div class="manga__information">
                <div class="list__manga-history">
                    <div class="history__title">
                        <h2>Lịch sử đọc truyện</h2>
                        <a href="/lich-su-doc">Xem tất cả</a>
                    </div>
                    <ul class="list__manga-content">
                    </ul>

                </div>
                <div class="manga__rank">
                    <div class="rank__title">
                        <ul class="list__rank-title">
                            <li class="list__rank-title-item">
                                <a href="">Top Ngày</a>
                            </li>
                            <li class="list__rank-title-item">
                                <a href="">Top Tuần</a>
                            </li>
                            <li class="list__rank-title-item">
                                <a href="">Top Tháng</a>
                            </li>
                        </ul>
                    </div>
                    @Html.Action("RenderTopView", "Home")
                </div>
            </div>




        </div>
    </div>
</div>
<script src="~/Scripts/SliderBar/SliderBar.js"></script>
<script src="~/Scripts/CookieLocalStore/History/RenderHistoryIndex.js"></script>