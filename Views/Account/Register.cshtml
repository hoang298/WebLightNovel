@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <link rel="stylesheet" href="~/css/Login.css">
    <link rel="stylesheet" href="~/fonts/fontawesome-free-5.15.4-web/css/all.min.css">

</head>
<body>
    <form action="/Account/Register" method="POST">
        @Html.AntiForgeryToken()
        <div class="modal">
            <div class="modal__overlay"></div>
            <div class="modal__body">
                <!-- form đăng nhập -->
                <div class="auth-form">
                    <div class="auth-form__container">
                        <div class="auth-form__header">
                            <h3 class="auth-form-heading">Đăng ký</h3>
                            <a style="text-decoration:none" href="/Login/LoginUser"><span class="auth-form__swich-btn">Đăng nhập</span></a>

                        </div>
                        <div class="auth-form__form">
                            <div class="auth-form__group">
                                <input required type="text" name="UserName" class="auth-form__input" placeholder="Nhập tên tài khoản">
                            </div>
                            <div class="auth-form__group">
                                <input required type="password" name="Password" class="auth-form__input" placeholder="Nhập mật khẩu">
                            </div>
                            <div class="auth-form__group">
                                <input required type="password" name="ConfirmPassword" class="auth-form__input" placeholder="Nhập lại mật khẩu">
                            </div>
                            <div class="auth-form__group">
                                <input required type="text" name="Email" class="auth-form__input" placeholder="Nhập địa chỉ email">
                            </div>
                        

                        </div>
                        <div class="auth-form__aside">
                            <div class="auth-form__help">
                                <a href="" class="auth-form__help-link auth-form__help-color">Quên mật khẩu</a>
                                <span class="auth-form__help-chia"></span>
                                <a href="" class="auth-form__help-link">Trợ giúp</a>
                            </div>
                            <h4 style="color:red; font-size:15px;margin-top:10px">
                            </h4>

                        </div>
                        <div class="auth-form__controls">
                            <span>@Html.ActionLink("TRỞ LẠI", "Index", "Home", null, new { @class = "btn auth-form__controls-back" })</span>
                            <input type="submit" class="btn btn__primary" value="ĐĂNG KÝ">
                        </div>
                    </div>
                    <div class="auth-form__socials">

                    </div>
                </div>
            </div>
        </div>
    </form>
</body>

</html>